# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	interval = 1
	output_format = i3bar
	color_good = "#fcfcfc"
	color_degraded = "#f1f1f1"
	color_bad = "#f1f1f1"
	#color_good = "#00a7ab"
	#color_degraded = "#f1f1f1"
	#color_bad = "#ab0300"
}

order += "disk /"
order += "load"
order += "volume master"
order += "battery 0"

order += "wireless _first_"
order += "ethernet _first_"
order += "path_exists VPN"
order += "tztime local"


disk "/" {
	format = 	" TiagoEDGE [i3][ArchLinux]   %avail"
	prefix_type = 	"custom"
}

path_exists VPN {
	path = 		"/proc/sys/net/ipv4/conf/tun0"
	format = 	"  %status "
	format_down = ""
}
wireless _first_ {
	format_up = 	" ⚙️ Wifi %essid"
	format_down = 	" ⚙️ Wifi OFF"
}

ethernet _first_ {
        format_up = "  %ip "
        format_down = "  OFF "
}

battery 0 {
        format = 			"%status %percentage"
	format_down = 			"  "
	status_chr = 			"   "
	status_bat = 			"  "
	status_full =			"  "
	hide_seconds = 			true
	last_full_capacity =	 	true
	integer_battery_capacity = 	true
}

volume master {
    format = "  %volume "
    format_muted = "  Muted "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

load {
    format = "  %1min "
}

tztime local {
	format = "  %d:%m:%Y   %H:%M:%S "
}
